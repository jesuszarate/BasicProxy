from socket import * 
serverPort = 12000
serverSocket = socket(AF_INET, SOCK_DGRAM)
serverSocket.bing(('', serverPort))
print("The server is ready to receive")
while True:
    messagee, clientAddress = serverSocket.recvfrom(2048)
